{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "esnext",
      "es6"
    ],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "jsx": "react",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "module": "es2022",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "node_dist",
    "types": [
      "vitest/globals",
      "@testing-library/jest-dom"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules"
  ],
  "lib": [
    "es2022"
  ]
}